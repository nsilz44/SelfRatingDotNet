@model Rating.Data.Skill
@{
    ViewData["Title"] = "Edit Skill";
}

<h3>Edit Skill</h3>

@using (Html.BeginForm("EditSkill", "Skills", new { id = Model.Id }, FormMethod.Post))
{
    <div class="mb-2">
        <label>Name</label>
        @Html.TextBox("name", Model.Name, new { @class = "form-control" })
    </div>
    <div class="mb-2">
        <label>Notes</label>
        @Html.TextArea("notes", Model.Notes, new { @class = "form-control" })
    </div>
    <div class="mb-2">
        <label>Custom Max Rating (optional)</label>
        @Html.TextBox("customMaxRating", Model.CustomMaxRating, new { @class = "form-control", type = "number", min = "0.1", step = "0.1" })
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Skills")" class="btn btn-secondary">Cancel</a>
    </div>
}
