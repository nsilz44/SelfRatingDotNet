@model List<Rating.Data.SkillHistory>
@{
    ViewData["Title"] = "Skill History";
}

<h3>History for @ViewData["SkillName"]</h3>

@if (!Model.Any())
{
    <div>No history available.</div>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr><th>Date</th><th>Old Rating</th><th>New Rating</th></tr>
        </thead>
        <tbody>
            @foreach (var h in Model)
            {
                <tr>
                    <td>@h.ChangedAt.ToLocalTime().ToString("g")</td>
                    <td>@h.OldRating.ToString("0.0")</td>
                    <td>@h.NewRating.ToString("0.0")</td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a href="@Url.Action("Index", "Skills")" class="btn btn-secondary">Back</a>
</div>
