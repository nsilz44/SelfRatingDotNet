@model Rating.Data.Category
@{
    ViewData["Title"] = "Edit Category";
}

<h3>Edit Category</h3>

@using (Html.BeginForm("EditCategory", "Skills", new { id = Model.Id }, FormMethod.Post))
{
    <div class="mb-2">
        <label>Name</label>
        @Html.TextBox("name", Model.Name, new { @class = "form-control" })
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Skills")" class="btn btn-secondary">Cancel</a>
    </div>
}
